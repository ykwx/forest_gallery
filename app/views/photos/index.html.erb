
<section id="seven">
	
	<p>
		A project to collect and curate some of the best in <br> woodland photography from around the world.
	</p>
	
</section>
	

<div id="list">
	
	<ul> 

	<% @photos.each do |img| %>
		<li>
			<div class="image">	
				<%= link_to image_tag(img.image, alt: img.first_name, width:"700", height:"450"), photo_path(img) %>
			</div>
			
			<div class="image_info">
				<h4>
					<%= img.first_name %>
					<%= img.last_name %>
				<br>			
					<span class="font"><%= img.city %>, 
					<%= img.country %></span>
				</h4>
			</div>	
		</li>
	
	
	<% end %>
	
	</ul>
	
	<%= will_paginate @photos %>
	
</div>	
