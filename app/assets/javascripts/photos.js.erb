$(document).ready(function() {

	$(document).on("mouseover mouseout", ".image", function() {
		$(this).children(".image_info").toggleClass("active");
	});

	$(".scroll").click(function(event){
    	 event.preventDefault();
	     //calculate destination place
	     var dest=0;
	     if($(this.hash).offset().top > $(document).height()-$(window).height()){
	          dest=$(document).height()-$(window).height();
	     }else{
	          dest=$(this.hash).offset().top;
	     }
	     //go to destination
	     $('html,body').animate({scrollTop:dest}, 700,'swing');
 	});


	//Infinite Scroll
       $( '#list ul' ).infinitescroll({
               behavior: 'local',
               navSelector: ".pagination",
               nextSelector: ".next_page",
               itemSelector: "#list ul li",
               extraScrollPx: 100,
               animate: true,
               bufferPx: 500,
				loading: {
			        finished: undefined,
			        finishedMsg: "<em>No more photographs</em>",
			       	img: "https://s3-eu-west-1.amazonaws.com/forest-gallery/images/loader.gif",
					msg: null,
			        msgText: "<em>Loading more photographs...</em>",
			        selector: null,
			        speed: 'fast',
			        start: undefined
			    }
       });

       $('a.gallery').colorbox({opacity: 0.5, width:"350px", height:"300px", html:"<h7><strong>Image Guidelines:</strong> Please upload a JPG or PNG with a maximum file size of 2MB and a minimum pixel width of 1000px. The images for this project are intended for print at large sizes (A1) so please ensure that a high resolution version is also available upon request. If your image is selected for the exhibition we will contact you via email for the high resolution version.</h7>"});
		$('a.terms').colorbox({opacity: 0.5, width:"350px", height:"350px", html:"<h7><strong>Terms and conditions:</strong> By uploading a photograph, you are agreeing to providing a high resolution version of the image upon request if it is chosen for the exhibition. You are also agreeing to having the image printed and displayed at the Forest exhibition at the 18 Hewett Street Gallery and for copies of the print to be sold, with all profits going to the charity International Tree foundation.</h7>"});
       $('a.confirmation').colorbox({opacity: 0.5, width:"350px", height:"250px", html:"<h7>Thanks for submitting your forest photograph.</h7>"});
       
});

