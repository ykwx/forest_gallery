$(document).ready(function() {

	$(document).on("mouseover mouseout", ".image", function() {
		$(this).next(".image_info").toggleClass("active");
	});

	$(".scroll").click(function(event){
    	 event.preventDefault();
	     //calculate destination place
	     var dest=0;
	     if($(this.hash).offset().top > $(document).height()-$(window).height()){
	          dest=$(document).height()-$(window).height();
	     }else{
	          dest=$(this.hash).offset().top;
	     }
	     //go to destination
	     $('html,body').animate({scrollTop:dest}, 700,'swing');
 	});


	//Infinite Scroll
       $( '#list ul' ).infinitescroll({
               behavior: 'local',
               navSelector: ".pagination",
               nextSelector: ".next_page",
               itemSelector: "#list ul li",
               extraScrollPx: 100,
               animate: true,
               bufferPx: 500,
				loading: {
			        finished: undefined,
			        finishedMsg: "<em>No more photographs</em>",
			       	img: "https://s3-eu-west-1.amazonaws.com/forest-gallery/images/loader.gif",
					msg: null,
			        msgText: "<em>Loading more photographs...</em>",
			        selector: null,
			        speed: 'fast',
			        start: undefined
			    }
       });

       $('a.gallery').colorbox({opacity: 0.5, width:"350px", height:"250px", html:"<h7>Photos are intended to be printed at large sizes. Please ensure that uploaded images are as high resolution as possible. Minimum size in pixels along the longest side should be no less 3600px.</h7>"});
		$('a.terms').colorbox({opacity: 0.5, width:"350px", height:"350px", html:"<h7><strong>Terms and conditions:</strong> By uploading a photograph, you are agreeing to the use of that image online and for print in volume 4 of Cereal magazine. You are also agreeing to have the image printed and displayed at the forest exhibition at 18 Hewett Street Gallery, and for copies of the print to be sold, with all profits going to the charity International Tree foundation.</h7>"});
       $('a.confirmation').colorbox({opacity: 0.5, width:"350px", height:"250px", html:"<h7>Thanks for submitting your forest photograph.</h7>"});
       
});